<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @post.tag %>
</p>

<p>
  <strong>Post image:</strong>
  <td><img src="<%= @post.post_image %>" width="400" height="300"></td>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |

<% if @like.length > 0 %>
  <button type="button" class="like">좋아요(<span id="like-count"><%= @post.likes.count %></span>)</button>
<% else %>
  <button type="button" class="like">좋아요(<span id="like-count"><%= @post.likes.length %></span>)</button>
<% end %>

<% content_for :script do %>
  <script>
    $(function() {
      $('.like').on('click', function() {
        $.ajax({
          url: 'posts/<%= @post.id %>/like',
          method: 'GET'
        })
      })
    })
  </script>
<% end %>
